<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <script src="~/js/scripts.js" type="text/javascript"></script>
</head>
<body>
    @using System.Security.Claims
    <div class="row">
        @if (User.IsSignedIn() && User.IsInRole("Student"))
        {
            <div id="navbar">
                <ul class="nav nav-pills">

                    <li><a href=@Url.Action("Index", "Quiz")><span>Quizzes</span></a></li>
                    <li role="presentation"><a href="#">Quizzes</a></li>
                    <li role="presentation"><a href="#">Profile</a></li>
                    <li>@using (Html.BeginForm("LogOff", "Account"))
                        {
                            <input type="submit" class="btn btn-default" value="Log out" />
                        }
                    </li>
                </ul>
            </div>

            @*<div class="col-sm-2 col-md-2 sidebar">
            <center>
                <h3>@(ViewBag.User.FirstName)</h3>
                <p>Points: @(ViewBag.User.Points)</p>
            </center>
            </div>*@
        }

        @if (User.IsSignedIn() && User.IsInRole("Teacher"))
        {
            <div id="navbar">
                <ul class="nav nav-pills">

                    <li><a href=@Url.Action("Quizzes", "Admin")><span>Quizzes</span></a></li>
                    <li role="presentation"><a href="#">Profile</a></li>
                    <li>
                        @using (Html.BeginForm("LogOff", "Account"))
                    {
                        <input type="submit" class="btn btn-default" value="Log out" />
                    }
                </li>

                </ul>
            </div>

  
        }


        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2" >
           <div class="container main">
               @RenderBody()
           </div>
        </div>
    </div>
</body>
</html>
