@model MeriEducation.Models.AddQuizViewModel

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/scripts.js" type="text/javascript"></script>
</head>
<body>
    <h2>Create</h2>
    <hr />
    <h4>Add a new quiz</h4>

       
        @using (Html.BeginForm())
    {
            <p>
                Quiz Name
                @Html.TextBoxFor(model => model.name)
            </p>

            <p>
                Quiz Grade
                @Html.TextBoxFor(model => model.grade)
            </p>

            <button type="button" onclick="addQuestion();">"Add a Question"</button>

            <div id="questions">
                <div class="questionsForm">

                    <p>
                        Question Text
                        @Html.TextBoxFor(model => model.questionText)
                    </p>

                    <p>
                        Question Answer Option 1
                        @Html.TextBoxFor(model => model.answer1)
                    </p>

                    <p>
                        Question Answer Option 2
                        @Html.TextBoxFor(model => model.answer2)
                    </p>

                    <p>
                        Question Answer Option 3
                        @Html.TextBoxFor(model => model.answer3)
                    </p>

                    <p>
                        Question Answer Option 4
                        @Html.TextBoxFor(model => model.answer4)
                    </p>

                    <p>
                        Question Correct Answer
                        @Html.TextBoxFor(model => model.correctAnswer)
                    </p>

                    </div>
                </div>

                    <input type="submit" value="Create" />

        }

    <p>@Html.ActionLink("Back to quiz list", "quizes")</p>
</body>
</html>