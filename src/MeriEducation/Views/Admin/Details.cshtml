@model MeriEducation.Models.Quiz

<h2>Quiz Details</h2>
<hr />

<p>@Html.DisplayNameFor(model => model.name): @Html.DisplayFor(model => model.name)</p>
<a href=@Url.Action("Edit", "Admin", new { id = Model.QuizId })><span>Edit Quiz Details</span></a>

<br />
<br />

Questions:
<br /> <br />

@foreach (var question in Model.Questions)
{
    <p><a href=@Url.Action("EditQuestion", "Admin", new { id = question.QuestionId })><span>Edit Question </span></a></p>
    @Html.DisplayFor(model => question.questionText)
    <p>@Html.DisplayFor(model => question.answer1)</p>
    <p>@Html.DisplayFor(model => question.answer2)</p>
    <p>@Html.DisplayFor(model => question.answer3)</p>
    <p>@Html.DisplayFor(model => question.answer4)</p>

}

<p>@Html.ActionLink("Back to Quizes", "quizes")</p>