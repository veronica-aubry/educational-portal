<link rel="stylesheet" type="text/css" href="~/css/styles.css" />
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
<script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
<script src="~/js/scripts.js" type="text/javascript"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MeriEducation.Models.Avatar
@using Microsoft.AspNet.Identity;
@using MeriEducation.Models
@using System.Security.Claims
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.FindByIdAsync(User.GetUserId());
}

@if (user.AvatarId == null)
{

    <h2>Create Your Avatar</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div id="visual">
                <span id="skin"><img src="~/images/skin/1.png" /></span>
                <span id="hair"></span>
                <span id="outfits"> </span>
            </div>
        </div>
        <div class="col-md-6">
            <div id="create">
                @using (Html.BeginForm())
                {
                    <p>
                        Hair
                        @Html.DropDownList("hairId")
                    </p>


                    <p>
                        Skin Tone
                        @Html.DropDownList("skinId")
                    </p>

                    <p>
                        Outfit
                        @Html.DropDownList("outfitId")
                    </p>

                    <input type="submit" value="Create" />

                }
            </div>
        </div>
    </div>
} else
{
    <h2>You already made your avatar!</h2>
    <a href="@Url.Action("Store", "Avatar")">Visit the Avatar Store to change your look!</a>

}
